{% set currentRoute = app.request.attributes.get('_route') %}
<header class="bg-indigo-800 text-white py-4 sticky top-0">
    <div class="container mx-auto flex items-center justify-between">
        <h1 class="text-4xl font-semibold text-indigo-100">FeedFusion.</h1>
        <div class="flex">
            <a href="{{ path('welcome') }}" class="px-2 py-1 text-white rounded flex items-center justify-center {% if currentRoute == 'welcome' %} border border-white {% endif %}">Welcome</a>
            <a href="{{ path('feeds') }}" class="px-2 py-1 text-white rounded flex items-center justify-center {% if currentRoute == 'feeds' %} border border-white {% endif %}">Feeds</a>
            <a href="{{ path('add_feed') }}" class="px-2 py-1 text-indigo-700 bg-indigo-200 ml-2 rounded flex items-center justify-center {% if currentRoute == 'add_feed' %} border border-indigo-400 bg-indigo-300 text-indigo-800 {% endif %}"> New Feed</a>

        </div>
    </div>
</header>
